  <div class="container d-flex justify-content-center">
    <div class="row my-2 mx-2">
      <div class="col-md-6">
    <img src="https://png.pngtree.com/png-vector/20190725/ourlarge/pngtree-message-icon-design-vector-png-image_1587713.jpg" alt="IMG">	
  </div><!--col-->
    <div class="col-md-6">
        <h2 class="form-title" style='margin-top: 6%;'>Contact us</h2>
          <p class="justify text-muted">Have an enquiry or would like to give us feedback?<br>Fill out the form below to contact our team.</p>

        <form action="contact" method="post">
          <div class="form-group pt-2 pl-1">
            <label for="exampleInputName">Your name</label>
            <input type="text" class="form-control" maxlength="20" name="name" required>
          </div>
          <div class="form-group pl-1">
            <label for="exampleInputEmail1">Your email address</label>
			<input type="email" class="form-control" name="emailSender" value=" <%= email %>" required>
          </div>

          <div class="form-group pl-1">
              <label for="exampleFormControlTextarea1">Your message</label>
              <textarea class="form-control" name="message" maxlength="250" rows="5" required></textarea>

            </div>
            <div class="row">
              <div class="col-md-3 offset-md-9"><button type="submit" class="btn btn-primary">Send</button></div>
		</form>
		<div class="col-md-3 offset-md-9"><input type="button" class="btn btn-primary" onclick="history.back()" value="Back"></input></div>
        </div>   
    </div><!--col-->
  </div><!--row-->
    
  </div>
