		</nav> -->
		<h3 class="text-dark mb-0">Enter your personal info</h3>
		<div class="container">
			<div class="col text-center">
				<div class="card shadow mb-3">
					<div class="card-body text-center">
						<form id='enter-personal-info' action="/personalInfo_provider" method="post">
							<%- include('../partials/NamePhoneAgeEmail'); %>
                            <br>
						<div class="row">
							<div class="mb-3 float-center" id="field"> 
								<select class="selectpicker" value='6' id='field' class="field" multiple data-live-search="true" name ="area_city" >
									<option disabled>Area</option>
									<% for(var i = 0 ; i < areas.length ; i++) { %>
										<option><%= areas[i] %></option>
									<% }; %>
									<option disabled>Cities</option>
									<% for(var i = 0 ; i < cities.length ; i++) { %>
										<option><%= cities[i] %></option>
									<% }; %>
								</select>
							</div>
						</div>
						<br>

						<div class="row">	
							<%- include('../partials/slidebar'); %>

						</div>
						<br>
						<br>
						<div id="dates">
							<div class="info-box">
								<div class="col-md-6"><label class="form-label" for="first_name"><strong>Type of pets</strong><br></label>
									<select class="selectpicker" multiple data-live-search="true" name="typeP">
								  <option disabled>Type of pets</option>
								  <option id ='type_dog'>Dog</option>
								  <option id ='type_dog'>Cat</option>
								  <option id ='type_other'>Other pet</option>
							  </select>
				  
							</div>
				  
				  
							<div class="info-box" id="return-box">
								<div class="col-md-6"><label class="form-label" for="first_name"><strong>Type of service</strong><br></label>
									<select class="selectpicker" multiple data-live-search="true" name="typeS">
								  <option disabled>Type of Service</option>
								  <option  id='take_for_walk'>Take for a walk</option>
								  <option  id='keep_at_home' >Keep at home</option>
							  </select> 
						  </div>
						  </div>
				
					<br>
							<br>
							<br>

							<%- include('../partials/about_me'); %>
						</div>
					</div>
					<button class="btn btn-primary btn-sm border rounded-pill float-end align-content-center" id='save' type="submit">Save</button>

				</form>
			</div>
			
		</div>
	</div>
</main>

<footer>
  <%- include('../partials/footer'); %>
