<body class="container">

<header>
  <%- include('../partials/header'); %>
</header>

<main>
  <form  id="search-form" action="filtering" method="post">
    <div id="header">
      <h1>Find your pets nanny</h1>
    </div>
    <section>
    <div class="searchT" id="searchbox">
       <!-- Area/City -->
        <div id="depart">
        <div class="info-box">
          <label for="">Area/City</label>
          <select class="selectpicker" id='area_city' multiple id='area_city' value='<%= area_city %>' name="area_city">
              <option disabled>Area</option>
				<% for(var i = 0 ; i < 3 ; i++) { %>
					<option <%= areaCities[i] == area_city ? 'selected' : '' %>><%= areaCities[i] %></option>
				<% }; %>
              <option disabled>Cities</option>
				<% for(var i = 3 ; i < areaCities.length ; i++) { %>
					<option <%= areaCities[i] == area_city ? 'selected' : '' %>><%= areaCities[i] %></option>
				<% }; %>
          </select>
        </div>
          
          <div class="info-box" id="arrive-box">
            <label for="">Price</label>

            <div class="jumbotron text-center disabledbutton" id='field_2' style='max-width: 60%;'>
				<div class="slidecontainer">
					<p>price: <span id="demo"></span>â‚ª</p>
					 <input type="range" name="price" min="1" max="200" class="slider" value='<%= price %>' id="price">
					
				</div>
				   
				<script>
				var slider = document.getElementById("price");
				var output = document.getElementById("demo");
				output.innerHTML = slider.value;
				
				slider.oninput = function() {
					output.innerHTML = this.value;
				}
				</script>
            </div>
          </div>
        </div>
            
        <!-- Type of pets-->
        <div id="dates">
        	<div class="info-box">
				<label for="">Type of pets</label>
				<select class="selectpicker" multiple id='typeP' name="typeP">
					<option disabled>Type of pets</option>
					<% typep = ["Dog", "Cat", "Other pet"] %>
					<% for(var i = 0 ; i < typep.length ; i++) { %>
						<option <%= typep[i] == typeP ? 'selected' : '' %>><%= typep[i] %></option>
					<% }; %>
				</select>
        	</div>
			<div class="info-box" id="return-box">
				<label for="">Type of Service</label>
				<select class="selectpicker" multiple value='<%= typeS %>' id='typeS' name="typeS">
					<option disabled>Type of Service</option>
					<% types = ["Take for a walk","Keep at home"] %>
					<% for(var i = 0 ; i < types.length ; i++) { %>
						<option <%= types[i] == typeS ? 'selected' : '' %>><%= types[i] %></option>
					<% }; %>
				</select> 
			</div>
        </div>
        <!-- date from to -->

			<label style='margin-left:8%; margin-top:3%;'>Date</label>
			<input type="date" id="date" name="date"  value='<%= date %>' required/>

			<label>From</label>
			<select class="selectpicker" id="from" name="from" value='<%= from %>'>
			<% for(var i = 0 ; i < times.length ; i++) { %>
				<option <%= times[i] == from ? 'selected' : '' %>><%= times[i] %></option>
			<% }; %>
			</select>
			<label>To</label>
			<select class="selectpicker" id="to" name="to" value='<%= to %>'>
			<% for(var i = 0 ; i < times.length ; i++) { %>
				<option <%= times[i] == to ? 'selected' : '' %>><%= times[i] %></option>
			<% }; %>
			</select>

	</div>
    <button type="submit" class="search">SEARCH</button>
	</section>
   
    </form>

</main>


<section class="tablee">
<%- include('../partials/searchTable'); %>
</section>

