<!DOCTYPE html>
<html lang="en">
<!-- script area city -->
<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.8.1/css/bootstrap-select.css">
<script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.8.1/js/bootstrap-select.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>

<link rel="stylesheet" href="styling/portal.css"></link>

<head>
  <%- include('../partials/head'); %>
  <link rel="stylesheet" href="styling/index.css"></link>

</head>
<body class="container">

<header>
  <%- include('../partials/header_loggedin'); %>
</header>

<main>
  

  <form  id="search-form" action="/filtering/" method="post">
    <div id="header">
      <h1>Find your pets nanny</h1>
    </div>
    <section>
      <div class="flight" id="flightbox">
        
        <form id="flight-form">
    
        
       <!-- Area/City -->
       <div id="flight-depart">
        <div class="info-box">
          <label for="">Area/City</label>
          <select class="selectpicker" id='area_city' multiple data-live-search="true" name ="area_city" >
              <option disabled>Area</option>
				<% for(var i = 0 ; i < areas.length ; i++) { %>
					<option><%= areas[i] %></option>
				<% }; %>
              <option disabled>Cities</option>
				<% for(var i = 0 ; i < cities.length ; i++) { %>
					<option><%= cities[i] %></option>
				<% }; %>
          </select>
        </div>
          
          <div class="info-box" id="arrive-box">
            <label for="">Price</label>

            <div class="jumbotron text-center disabledbutton" id='field_2'>
              <!-- need to fix slidebar -->
              <%- include('../partials/rangebar'); %>


            </div>
          </div>
        </div>
            
        <!-- Type of pets-->
        <div id="flight-dates">
          <div class="info-box">
            <label for="">Type of pets</label>
            <select class="selectpicker" multiple data-live-search="true" name="typeP">
                <option disabled>Type of pets</option>
                <option id ='type_dog'>Dog</option>
                <option id ='type_dog'>Cat</option>
                <option id ='type_other'>Other pet</option>
            </select>

          </div>


          <div class="info-box" id="return-box">
            <label for="">Type of Service</label>
            <select class="selectpicker" multiple data-live-search="true" name="typeS">
                <option disabled>Type of Service</option>
                <option  id='take_for_walk'>Take for a walk</option>
                <option  id='keep_at_home' >Keep at home</option>
            </select> 
        </div>
        </div>
        
        <!-- date from to -->
        <div id="flight-info">
          <div class="info-box">
           
            <label for="adults">Date</label>
            <input type="date" id="date" name="date">


          </div>
          <div class="info-box">
        
            <label for="children" >From</label>

            <select id="from" name="from">
				<% for(var i = 0 ; i < times.length ; i++) { %>
					<option><%= times[i] %></option>
				<% }; %>
             

            </select>
            </div>
          
          <div class="info-box">
            <label for="class-type">To</label>
            <select id="to" name="to" >
				<% for(var i = 0 ; i < times.length ; i++) { %>
					<option><%= times[i] %></option>
				<% }; %>
            
            </select>

          </div>
          <div class="info-box">
            <label for="class-type">Add</label>
            <input type="button" id="myButton" value="+" onlick="duplicate()" name="add">
          </div>
      </div>
      <script>
        document.getElementById('myButton').onclick = duplicate;

        var i = 0;
        var j = 0;
        var k = 0;
        var original = document.getElementById('date');
        var original1 = document.getElementById('from');
        var original2 = document.getElementById('to');
        var o = document.getElementById("duplicator")
        function duplicate() {
            var clone = original.cloneNode(true);
            var clone1 = original1.cloneNode(true);
            var clone2 = original2.cloneNode(true);

            clone.id = "duplicator" + ++i;
            clone.id1 = "duplicator" + ++j;
            clone.id2 = "duplicator" + ++k;
            original.parentNode.appendChild(clone);
            original1.parentNode.appendChild(clone1);
            original2.parentNode.appendChild(clone2)

        }

    </script>
    
      <button type="submit" onclick="myFunction()" class="search">SEARCH</button>

      </form> 
   
    </form>

   
</main>
<section class="tablee">
<% if (currentUser.typeOfUser == 0) { %>
    <%- include('../partials/tableClient'); %>
<% } else { %>
    <%- include('../partials/tableProviders'); %>
<% } %>
</section>




<footer>
  <%- include('../partials/footer'); %>
</footer>

</body>
</html>